#tooltips-container {
  position: fixed;
  bottom: 0;
  left: 50%;
  transition: .4s cubic-bezier(.4, 0, .2, 1);
  will-change: transform;
  transform: translateX(-50%) translateY(100%);
  visibility: hidden;

  &.active {
    transform: translateX(-50%) translateY(0%);
    visibility: visible;
  }
}

.tooltip {
  background-color: #323232;
  color: #fff;
  box-shadow: 0 3px 5px -1px rgba(0, 0, 0, .2), 0 6px 10px 0 rgba(0, 0, 0, .14), 0 1px 18px 0 rgba(0, 0, 0, .12);
  min-width: 288px;
  max-width: 568px;
  min-height: 48px;
  max-height: 80px;
  padding: 14px 24px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-radius: 2px;
}

.tooltip__text {
  margin-right: 25px;
}

.tooltip__message {
  padding: 5px 0;
  border-bottom: 1px solid rgba(#fff, .1);

  &:last-child {
    padding-bottom: 0;
    border: 0; 
  }

  &:first-child:last-child {
    padding: 0;
  }
}

.tooltip__button {
  text-transform: uppercase;
  color: #448aff;
  padding: 0;
}